<Page x:Class="prs.pages.AddEditS"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:prs.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditS">

    <Grid Background="#FFA2A2A2">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Background="#FFA2A2A2">
            <TextBlock Margin="5"><Run Language="ru-ru" Text="Редактор"/></TextBlock>
            <TextBox Text="{Binding Nazvaniye_tovara}" Margin="5"/>
            <TextBox Text="{Binding Edinica_izmereniya}" Margin="5"/>
            <Button x:Name="SaveBtn" Content="Сохранить" Margin="5" Width="150" Height="30" Click="Savebtn_Click"/>
            <Button x:Name="BackBtn" Content="Отменить" Margin="5" Width="150" Height="30" Click="Backbtn_Click"/>
        </StackPanel>
    </Grid>
</Page>
